.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.notice-item{
  border: 1rpx solid red;
  width: auto;
  height: auto;
  margin: 20rpx 20rpx;
  text-align: center;
  padding: 20rpx;
}

.notice-text{
  font-size: 20px;
}

.notice-title{
  font-size: 20px;
  width: 100%;
  text-align: center;
}